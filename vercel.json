

{
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/index.html",
      "headers": {
        "Content-Type": "application/xml"
      }
    },
    {
      "src": "/robots.txt",
      "dest": "/index.html",
      "headers": {
        "Content-Type": "text/plain"
      }
    },
    {
      "src": "/[^.]+",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "s-maxage=0"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}